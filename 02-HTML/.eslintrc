{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "env": {
    "browser": false,
    "node": true,
    "es6": true,
    "mocha": false
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "window": false,
    "document": false
  },
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-var": 1,
    "no-eval": "error",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-console": ["error", { "allow": ["warn", "info"] }],
    "space-before-function-paren": ["error", "never"],
    "padded-blocks": ["error", "never"],
    "prefer-arrow-callback": [0, { "allowNamedFunctions": true }],
    "func-names": ["error", "never"],
    "no-use-before-define": [
      "error", {
        "functions": true,
        "classes": true
      }
    ],
    "max-nested-callbacks": [
      "error",
      5
    ]
  }
}
