{
  "name": "shri-git-client",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/index.js --path=./repos",
    "loadtest": "loadtest -c 10 -t 20 --rps 200  http://localhost:8080/api/repos/",
    "test": "jest --detectOpenHandles --path=./src/tests/test-repos"
  },
  "author": "webistomin",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "node-banner": "^1.3.2",
    "rimraf": "^3.0.0",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "loadtest": "^3.0.8",
    "nodemon": "^1.19.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/handlers/**/*.js",
      "./src/utils/**/*.js",
      "./src/server.js",
      "./src/routes.js"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ],
    "testRegex": "./src/tests/specs/.*.js$",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/repos/"
